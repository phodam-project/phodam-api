{
    "name": "phodam/phodam-api",
    "description": "The API for Phodam",
    "type": "library",
    "license": "MIT",
    "keywords": [
      "unit tests",
      "testing",
      "data objects"
    ],
    "homepage": "https://github.com/phodam-project/phodam-api",
    "readme": "README.md",
    "authors": [
      {
        "name": "Andrew Vehlies",
        "email": "avehlies@gmail.com",
        "role": "Owner"
      },
      {
        "name": "Chris Bouchard",
        "email": "chris@upliftinglemma.net",
        "role": "Developer"
      }
    ],
    "require": {
      "php": "^8.4"
    },
    "config": {
      "platform": {
        "php": "8.4"
      },
      "allow-plugins": {
        "phpstan/extension-installer": true
      }
    },
    "minimum-stability": "stable",
    "require-dev": {
      "phpstan/phpstan": "~2.1.33",
      "phpunit/phpunit": "~12.5.4",
      "squizlabs/php_codesniffer": "~4.0.1",
      "friendsofphp/php-cs-fixer": "~3.92.5",
      "phpstan/extension-installer": "~1.4.3",
      "phpstan/phpstan-phpunit": "~2.0.11",
      "sebastian/diff": "~7.0.0"
    },
    "autoload": {
      "psr-4": {
        "Phodam\\": "src/Phodam"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "PhodamTests\\": "tests"
      }
    },
    "scripts": {
      "lint:phpcs": "phpcs --standard=PSR12 src",
      "lint:phpcsfixer": "php-cs-fixer fix src --rules=@PSR12 --dry-run --cache-file=build/.php-cs-fixer.cache",
      "lint:phpcsfixer:fix": "php-cs-fixer fix src --rules=@PSR12 --cache-file=build/.php-cs-fixer.cache",
      "lint:phpstan": "phpstan analyse -l 6 src",
      "lint-test:phpcs": "phpcs --standard=PSR12 tests",
      "lint-test:phpcsfixer": "php-cs-fixer fix tests --rules=@PSR12 --dry-run --cache-file=build/.php-cs-fixer.cache",
      "lint-test:phpstan": "phpstan analyse -l 6 tests",
      "test:phpunit": "phpunit -c phpunit.xml",
      "lint": [
        "mkdir -p build",
        "@lint:phpstan",
        "@lint:phpcs",
        "@lint:phpcsfixer"
      ],
      "lint-fix": [
        "@lint:phpcsfixer:fix"
      ],
      "lint-test": [
        "mkdir -p build",
        "@lint-test:phpcs",
        "@lint-test:phpcsfixer",
        "@lint-test:phpstan"
      ],
      "test": [
        "mkdir -p build",
        "@test:phpunit"
      ],
      "precommit": [
        "@lint",
        "@test"
      ]
    }
  }
  